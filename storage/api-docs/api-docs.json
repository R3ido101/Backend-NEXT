{
    "swagger": "2.0",
    "info": {
        "title": "ATLauncher API",
        "description": "This is the API for accessing data for ATLauncher. Please note that any authenticated requests will list the scopes needed to access and will need an 'Authorization: Bearer\n                        {token}' heading. This token can be created by following the OAuth section below. Alternatively to test the API in Swagger with authorizaton needed, enter your client id\n                        and secret in the top box (optionally clicking save to remember those credentials on page refresh) so that you can use the on/off toggles beside calls needing authentication\n                        using your client id and client secret. For now there is no way to create new OAuth clients for use in your own applications, but this will be coming in the future.",
        "version": "1.0.0"
    },
    "basePath": "/",
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/v2": {
            "get": {
                "tags": [
                    "root"
                ],
                "summary": "Returns a hello world message.",
                "description": "Simply returns a hello world message used for testing things out.",
                "operationId": "get",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/v2/authenticated": {
            "get": {
                "tags": [
                    "root"
                ],
                "summary": "Route to test OAuth.",
                "description": "This route is simply here to test OAuth authentication.",
                "operationId": "get",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "string"
                        }
                    }
                },
                "security": [
                    {
                        "oauth": [
                            "read:self"
                        ]
                    }
                ]
            }
        },
        "/oauth/scopes": {
            "get": {
                "tags": [
                    "oauth"
                ],
                "summary": "Get the scopes available.",
                "description": "Gets a listing of scopes available to get access from users.",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/OauthScopesResponse"
                            }
                        }
                    }
                }
            }
        },
        "/oauth/authorize": {
            "get": {
                "tags": [
                    "oauth"
                ],
                "summary": "Authorize user to your application.",
                "description": "Asks a user to login and authorize your application for the given scope and client. If the client is not already logged in with their ATLauncher account then they will\n *                  redirected to login first and then taken to a page displaying the scopes requested before being able to authorize or decline the request.",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "client_id",
                        "in": "query",
                        "description": "The client ID to authorize against.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "redirect_uri",
                        "in": "query",
                        "description": "The url to redirect to once the authorization is allowed/denied.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "response_type",
                        "in": "query",
                        "description": "The response type to receive.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "scope",
                        "in": "query",
                        "description": "The scope to authorize against.",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    }
                }
            }
        },
        "/oauth/token": {
            "post": {
                "tags": [
                    "oauth"
                ],
                "summary": "Get access token from code.",
                "description": "Gets an access token from a code generated after a successful authorization.",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "parameters",
                        "in": "body",
                        "description": "Parameters needed to be sent in order to retrieve the token.",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/OauthTokenRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/OauthTokenResponse"
                        }
                    },
                    "400": {
                        "description": "unsupported grant_type value"
                    },
                    "401": {
                        "description": "invalid client"
                    }
                }
            }
        }
    },
    "definitions": {
        "OauthScopesResponse": {
            "properties": {
                "id": {
                    "description": "The name of the scope.",
                    "type": "string"
                },
                "description": {
                    "description": "The description for the scope.",
                    "type": "string"
                }
            },
            "xml": {
                "name": "OauthScopesResponse"
            }
        },
        "OauthTokenRequest": {
            "properties": {
                "grant_type": {
                    "type": "string",
                    "default": "authorization_code"
                },
                "client_id": {
                    "type": "string"
                },
                "client_secret": {
                    "type": "string"
                },
                "redirect_uri": {
                    "type": "string"
                },
                "code": {
                    "type": "string"
                }
            },
            "xml": {
                "name": "OauthTokenRequest"
            }
        },
        "OauthTokenResponse": {
            "properties": {
                "token_type": {
                    "type": "string",
                    "default": "Bearer"
                },
                "expires_in": {
                    "type": "integer"
                },
                "access_token": {
                    "type": "string"
                },
                "refresh_token": {
                    "type": "string"
                }
            },
            "xml": {
                "name": "OauthTokenResponse"
            }
        }
    },
    "securityDefinitions": {
        "oauth": {
            "type": "oauth2",
            "flow": "accessCode",
            "authorizationUrl": "/oauth/authorize",
            "tokenUrl": "/oauth/token",
            "scopes": {
                "self:read": "read your account (except password)",
                "self:write": "write to account data"
            }
        }
    },
    "tags": [
        {
            "name": "root",
            "description": "Just root stuff"
        },
        {
            "name": "oauth",
            "description": "Oauth authentication"
        }
    ]
}